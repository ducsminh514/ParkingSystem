    public void Dispose()
    {
        AdminService.OnPriceUpdated -= HandlePriceUpdated;
        AdminService.OnPriceDeleted -= HandlePriceDeleted;
    }

    // Form model
    private class PriceFormModel
    {
        public Guid? PriceId { get; set; }
        public string VehicleType { get; set; } = string.Empty;
        public decimal PricePerHour { get; set; }
        public bool IsActive { get; set; } = true;
    }
