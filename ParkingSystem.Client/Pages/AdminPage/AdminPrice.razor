@page "/admin/pricing"
@using ParkingSystem.Shared.DTOs
@using ParkingSystem.Client.Services
@inject AdminService AdminService
@inject IJSRuntime JSRuntime
@implements IDisposable

<PageTitle>Admin - Price Management</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h3><i class="bi bi-cash-coin"></i> Pricing Management</h3>
        </div>
        <div class="col-auto">
            <button class="btn btn-success" @onclick="OpenAddModal">
                <i class="bi bi-plus-circle"></i> Add New Price
            </button>
            <button class="btn btn-outline-primary ms-2" @onclick="LoadPrices">
                <i class="bi bi-arrow-clockwise"></i> Refresh
            </button>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @errorMessage
            <button type="button" class="btn-close" @onclick="() => errorMessage = string.Empty"></button>
        </div>
    }

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2">Loading pricing list...</p>
        </div>
    }
    else if (prices.Count == 0)
    {
        <div class="text-center py-5">
            <i class="bi bi-inbox" style="font-size: 3rem; color: #ccc;"></i>
            <p class="text-muted mt-3">No pricing entries found</p>
            <button class="btn btn-primary mt-2" @onclick="OpenAddModal">
                <i class="bi bi-plus-circle"></i> Add First Price
            </button>
        </div>
    }
    else
    {
        <!-- PRICE TABLE DISPLAY -->
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 5%">#</th>
                                <th style="width: 25%">
                                    <i class="bi bi-car-front"></i> Vehicle Type
                                </th>
                                <th style="width: 20%">
                                    <i class="bi bi-cash-stack"></i> Hourly Price
                                </th>
                                <th style="width: 15%">
                                    <i class="bi bi-toggle-on"></i> Status
                                </th>
                                <th style="width: 15%">
                                    <i class="bi bi-calendar"></i> Created At
                                </th>
                                <th style="width: 15%">
                                    <i class="bi bi-calendar-check"></i> Updated
                                </th>
                                <th style="width: 5%" class="text-center">
                                    <i class="bi bi-gear"></i> Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var (price, index) in prices.Select((p, i) => (p, i)))
                            {
                                <tr class="@(price.IsActive ? "" : "table-secondary opacity-75")">
                                    <td class="fw-bold">@(index + 1)</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-car-front-fill me-2 fs-5 @(price.IsActive ? "text-primary" : "text-muted")"></i>
                                            <span class="fw-bold">@price.VehicleType</span>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-success fs-6 px-3 py-2">
                                            @price.PriceDisplay
                                        </span>
                                    </td>
                                    <td>
                                        @if (price.IsActive)
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle"></i> Active
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-x-circle"></i> Inactive
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <small class="text-muted">
                                            @price.CreatedDate.ToString("dd/MM/yyyy HH:mm")
                                        </small>
                                    </td>
                                    <td>
                                        <small class="text-muted">
                                            @(price.UpdatedDate?.ToString("dd/MM/yyyy HH:mm") ?? "-")
                                        </small>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <button class="btn btn-sm btn-outline-primary" 
                                                    @onclick="() => OpenEditModal(price)"
                                                    title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            <button class="btn btn-sm @(price.IsActive ? "btn-outline-warning" : "btn-outline-success")" 
                                                    @onclick="() => ToggleStatus(price.PriceId)"
                                                    title="@(price.IsActive ? "Disable" : "Enable")">
                                                <i class="bi bi-@(price.IsActive ? "toggle-on" : "toggle-off")"></i>
                                            </button>
                                            <button class="btn btn-sm btn-outline-danger" 
                                                    @onclick="() => DeletePrice(price.PriceId)"
                                                    title="Delete"
                                                    disabled="@price.IsActive">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- STATISTICS -->
        <div class="row mt-4">
            <div class="col-md-4">
                <div class="card bg-primary text-white shadow-sm">
                    <div class="card-body">
                        <h6 class="card-title">Total Vehicle Types</h6>
                        <h3 class="mb-0">@prices.Count</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-success text-white shadow-sm">
                    <div class="card-body">
                        <h6 class="card-title">Active</h6>
                        <h3 class="mb-0">@prices.Count(p => p.IsActive)</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-secondary text-white shadow-sm">
                    <div class="card-body">
                        <h6 class="card-title">Inactive</h6>
                        <h3 class="mb-0">@prices.Count(p => !p.IsActive)</h3>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- MODAL ADD/EDIT -->
@if (showModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header @(isEditMode ? "bg-warning" : "bg-success") text-white">
                    <h5 class="modal-title">
                        <i class="bi bi-@(isEditMode ? "pencil-square" : "plus-circle")"></i>
                        @(isEditMode ? "Edit Price" : "Add New Price")
                    </h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="CloseModal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold">
                            Vehicle Type <span class="text-danger">*</span>
                        </label>
                        <input type="text" 
                               class="form-control form-control-lg" 
                               @bind="formModel.VehicleType" 
                               placeholder="e.g. Motorbike, Car, Bicycle..."
                               disabled="@isEditMode" />
                        <small class="text-muted">
                            @(isEditMode ? "Vehicle type cannot be changed on edit" : "Enter vehicle type")
                        </small>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">
                            Hourly Price (VND) <span class="text-danger">*</span>
                        </label>
                        <div class="input-group input-group-lg">
                            <input type="number" 
                                   class="form-control" 
                                   @bind="formModel.PricePerHour" 
                                   placeholder="5000"
                                   min="0"
                                   step="1000" />
                            <span class="input-group-text">VND/hour</span>
                        </div>
                    </div>

                    <div class="form-check form-switch">
                        <input class="form-check-input" 
                               type="checkbox" 
                               id="isActiveSwitch" 
                               @bind="formModel.IsActive" />
                        <label class="form-check-label fw-bold" for="isActiveSwitch">
                            @(formModel.IsActive ? "✓ Active" : "✗ Inactive")
                        </label>
                    </div>

                    @if (!string.IsNullOrEmpty(modalError))
                    {
                        <div class="alert alert-danger mt-3 mb-0">
                            <i class="bi bi-exclamation-triangle"></i> @modalError
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseModal">
                        <i class="bi bi-x-lg"></i> Cancel
                    </button>
                    <button type="button" 
                            class="btn @(isEditMode ? "btn-warning" : "btn-success")" 
                            @onclick="SavePrice"
                            disabled="@isSubmitting">
                        @if (isSubmitting)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                            <span>Processing...</span>
                        }
                        else
                        {
                            <i class="bi bi-check-circle"></i>
                            <span>@(isEditMode ? "Update" : "Add")</span>
                        }
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<!-- Success Toast -->
<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 9999">
    <div id="successToast" class="toast align-items-center text-white bg-success border-0" role="alert">
        <div class="d-flex">
            <div class="toast-body">
                <i class="bi bi-check-circle-fill me-2"></i>
                <span id="toastMessage">Action succeeded!</span>
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
        </div>
    </div>
</div>

