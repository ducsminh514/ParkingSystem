@code {
    private List<ParkingPriceDetailDto> prices = new();
    private bool isLoading = true;
    private string errorMessage = string.Empty;

    // Modal state
    private bool showModal = false;
    private bool isEditMode = false;
    private bool isSubmitting = false;
    private string modalError = string.Empty;
    private PriceFormModel formModel = new();

    protected override async Task OnInitializedAsync()
    {
        // Register real-time handlers
        AdminService.OnPriceUpdated += HandlePriceUpdated;
        AdminService.OnPriceDeleted += HandlePriceDeleted;

        await LoadPrices();
    }

    private void HandlePriceUpdated(ParkingPriceDto updatedPrice)
    {
        var existingPrice = prices.FirstOrDefault(p => p.PriceId == updatedPrice.PriceId);
        if (existingPrice != null)
        {
            existingPrice.VehicleType = updatedPrice.VehicleType;
            existingPrice.PricePerHour = updatedPrice.PricePerHour;
            existingPrice.IsActive = updatedPrice.IsActive;
            existingPrice.UpdatedDate = DateTime.Now;
        }
        else
        {
            // Reload to get full details
            _ = LoadPrices();
        }

        InvokeAsync(StateHasChanged);
    }

    private void HandlePriceDeleted(Guid priceId)
    {
        var price = prices.FirstOrDefault(p => p.PriceId == priceId);
        if (price != null)
        {
            price.IsActive = false;
            price.UpdatedDate = DateTime.Now;
        }

        InvokeAsync(StateHasChanged);
    }

    private async Task LoadPrices()
    {
        try
        {
            isLoading = true;
            errorMessage = string.Empty;

            prices = await AdminService.GetAllPricesAdmin();
        }
        catch (Exception ex)
        {
            errorMessage = $"Could not load data: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void OpenAddModal()
    {
        isEditMode = false;
        formModel = new PriceFormModel { IsActive = true };
        modalError = string.Empty;
        showModal = true;
    }

    private void OpenEditModal(ParkingPriceDetailDto price)
    {
        isEditMode = true;
        formModel = new PriceFormModel
        {
            PriceId = price.PriceId,
            VehicleType = price.VehicleType,
            PricePerHour = price.PricePerHour,
            IsActive = price.IsActive
        };
        modalError = string.Empty;
        showModal = true;
    }

    private void CloseModal()
    {
        showModal = false;
        formModel = new();
        modalError = string.Empty;
    }

    private async Task SavePrice()
    {
        try
        {
            isSubmitting = true;
            modalError = string.Empty;

            // Validation
            if (string.IsNullOrWhiteSpace(formModel.VehicleType))
            {
                modalError = "Please enter vehicle type";
                return;
            }

            if (formModel.PricePerHour <= 0)
            {
                modalError = "Hourly price must be greater than 0";
                return;
            }

            var request = new UpsertPriceRequest
            {
                PriceId = formModel.PriceId,
                VehicleType = formModel.VehicleType.Trim(),
                PricePerHour = formModel.PricePerHour,
                IsActive = formModel.IsActive
            };

            var response = await AdminService.UpsertPrice(request);

            if (response.Success)
            {
                await ShowToast(response.Message);
                CloseModal();
                await LoadPrices();
            }
            else
            {
                modalError = response.Message;
            }
        }
        catch (Exception ex)
        {
            modalError = $"Error: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private async Task ToggleStatus(Guid priceId)
    {
        try
        {
            var response = await AdminService.TogglePriceStatus(priceId);

            if (response.Success)
            {
                await ShowToast(response.Message);
                await LoadPrices();
            }
            else
            {
                await ShowToast(response.Message, false);
            }
        }
        catch (Exception ex)
        {
            await ShowToast($"Error: {ex.Message}", false);
        }
    }

    private async Task DeletePrice(Guid priceId)
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", 
            "Are you sure you want to delete this price? (Only inactive prices can be deleted)");

        if (!confirmed) return;

        try
        {
            var response = await AdminService.DeletePrice(priceId);

            if (response.Success)
            {
                await ShowToast(response.Message);
                await LoadPrices();
            }
            else
            {
                await ShowToast(response.Message, false);
            }
        }
        catch (Exception ex)
        {
            await ShowToast($"Error: {ex.Message}", false);
        }
    }

