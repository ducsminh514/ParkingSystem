    private async Task HandleLogin()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            // âœ… Gá»i qua service method
            var result = await ParkingService.Login(loginRequest);

            if (result.Success && result.UserInfo != null)
            {
                await AuthStateProvider.MarkUserAsAuthenticated(result.UserInfo);
                Navigation.NavigateTo("/", forceLoad: true);
            }
            else
            {
                errorMessage = result.Message;
            }
        }
        catch (Exception ex)
