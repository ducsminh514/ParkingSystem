@page "/login"
@using ParkingSystem.Client.Services
@using ParkingSystem.Shared.Models
@inject CustomerService CustomerService
@inject SimpleAuthStateProvider AuthStateProvider
@inject NavigationManager Navigation

<PageTitle>ﾄ斉ハg nh蘯ｭp</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow" >
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">沐 ﾄ斉ハg nh蘯ｭp</h4>
                </div>
                <div class="card-body p-4">
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger">@errorMessage</div>
                    }

                    <EditForm Model="loginRequest" OnValidSubmit="HandleLogin">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Lo蘯｡i tﾃi kho蘯｣n:</label>
                            <select class="form-select" @bind="loginRequest.IsStaff">
                                <option value="false">汨､ Khﾃ｡ch hﾃng</option>
                                <option value="true">汨 Nhﾃ｢n viﾃｪn</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                @(loginRequest.IsStaff ? "Tﾃｪn ﾄ惰ハg nh蘯ｭp" : "Email/Sﾄ慎"):
                            </label>
                            <input type="text" class="form-control" @bind="loginRequest.UsernameOrEmail" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">M蘯ｭt kh蘯ｩu:</label>
                            <input type="password" class="form-control" @bind="loginRequest.Password" required />
                        </div>

                        <button type="submit" class="btn btn-primary w-100" disabled="@isLoading">
                            @if (isLoading)
                            {
                                <span class="spinner-border spinner-border-sm me-2"></span>
                            }
                            ﾄ斉ハg nh蘯ｭp
                        </button>
                    </EditForm>

                    <hr class="my-4" />
                    <div class="text-center">
                        <p class="mb-0">Chﾆｰa cﾃｳ tﾃi kho蘯｣n? <a href="/register" class="fw-bold">ﾄ斉ハg kﾃｽ ngay</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private LoginRequest loginRequest = new();
    private string? errorMessage;
    private bool isLoading;

    protected override async Task OnInitializedAsync()
    {
        
    }

    private async Task HandleLogin()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            // 笨 G盻絞 qua service method
            var result = await CustomerService.Login(loginRequest);

            if (result.Success && result.UserInfo != null)
            {
                await AuthStateProvider.MarkUserAsAuthenticated(result.UserInfo);
                Navigation.NavigateTo("/", forceLoad: true);
            }
            else
            {
                errorMessage = result.Message;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"L盻擁: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }
}