@page "/login"
@using ParkingSystem.Client.Services
@using ParkingSystem.Shared.Models
@inject CustomerService CustomerService
@inject SimpleAuthStateProvider AuthStateProvider
@inject NavigationManager Navigation

<PageTitle>Login</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">üîê Login</h4>
                </div>
                <div class="card-body p-4">
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            @errorMessage
                        </div>
                    }

                    <EditForm Model="loginRequest" OnValidSubmit="HandleLogin">
                        <DataAnnotationsValidator />

                        <div class="mb-3">
                            <label class="form-label fw-bold">Account type:</label>
                            <select class="form-select" @bind="UserType">
                                <option value="customer">üë§ Customer</option>
                                <option value="staff">üëî Staff</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                @(UserType == "staff" ? "Username" : "Email/Phone"):
                            </label>
                            <input type="text" class="form-control"
                                   @bind="loginRequest.UsernameOrEmail"
                                   required
                                   placeholder="@(UserType == "staff" ? "Enter username" : "Enter email or phone number")" />
                            <ValidationMessage For="@(() => loginRequest.UsernameOrEmail)" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Password:</label>
                            <input type="password" class="form-control"
                                   @bind="loginRequest.Password"
                                   required
                                   placeholder="Enter password" />
                            <ValidationMessage For="@(() => loginRequest.Password)" />
                        </div>

                        <button type="submit" class="btn btn-primary w-100" disabled="@isLoading">
                            @if (isLoading)
                            {
                                <span class="spinner-border spinner-border-sm me-2"></span>
                                <span>Processing...</span>
                            }
                            else
                            {
                                <span>Login</span>
                            }
                        </button>
                    </EditForm>

                    <hr class="my-4" />
                    <div class="text-center">
                        <p class="mb-0">Don't have an account? <a href="/register" class="fw-bold">Register now</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private LoginRequest loginRequest = new();
    private string? errorMessage;
    private bool isLoading;
    private string userType = "customer";

    // Property with setter to automatically handle changes
    private string UserType
    {
        get => userType;
        set
        {
            if (userType != value)
            {
                userType = value;
                loginRequest.IsStaff = value == "staff";
                loginRequest.UsernameOrEmail = ""; // Clear input when switching type
                errorMessage = null; // Clear error
            }
        }
    }

    private async Task HandleLogin()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            var result = await CustomerService.Login(loginRequest);

            if (result.Success && result.UserInfo != null)
            {
                await AuthStateProvider.MarkUserAsAuthenticated(result.UserInfo);
                Navigation.NavigateTo("/", forceLoad: true);
            }
            else
            {
                errorMessage = result.Message ?? "Login failed";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
            Console.WriteLine($"[Login Error] {ex}");
        }
        finally
        {
            isLoading = false;
        }
    }
}