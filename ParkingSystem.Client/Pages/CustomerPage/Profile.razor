@page "/profile"
@attribute [Authorize(Roles = "Customer")]
@using ParkingSystem.Shared.Models
@using ParkingSystem.Client.Services
@using System.Security.Claims
@inject CustomerService CustomerService
@inject AuthenticationStateProvider AuthStateProvider
@inject SimpleAuthStateProvider SimpleAuthProvider
@inject NavigationManager Navigation

<PageTitle>Profile</PageTitle>

<div class="container mt-4">
    <h3><i class="bi bi-person-circle"></i> Profile</h3>

    @if (!string.IsNullOrEmpty(successMessage)) 
    {
        <div class="alert alert-success alert-dismissible">
            <i class="bi bi-check-circle-fill"></i> @successMessage
            <button type="button" class="btn-close" @onclick="() => successMessage = string.Empty"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger alert-dismissible">
            <i class="bi bi-exclamation-triangle-fill"></i> @errorMessage
            <button type="button" class="btn-close" @onclick="() => errorMessage = string.Empty"></button>
        </div>
    }

    <div class="row">
        <!-- Personal Information -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-person-fill"></i> Personal Information</h5>
                </div>
                <div class="card-body">
                    @if (currentCustomer != null)
                    {
                        <div class="mb-3">
                            <label class="form-label fw-bold">Full Name</label>
                            <input type="text" class="form-control" @bind="currentCustomer.FullName" disabled="@(!isEditingProfile)" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Phone</label>
                            <input type="tel" class="form-control" @bind="currentCustomer.Phone" disabled="@(!isEditingProfile)" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Email</label>
                            <input type="email" class="form-control" @bind="currentCustomer.Email" disabled="@(!isEditingProfile)" />
                        </div>

                        @if (!isEditingProfile)
                        {
                            <button class="btn btn-primary" @onclick="StartEditProfile">
                                <i class="bi bi-pencil"></i> Edit
                            </button>
                        }
                        else
                        {
                            <button class="btn btn-success me-2" @onclick="SaveProfile" disabled="@isSaving">
                                @if (isSaving)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                }
                                <i class="bi bi-check-lg"></i> Save
                            </button>
                            <button class="btn btn-secondary" @onclick="CancelEditProfile">
                                <i class="bi bi-x-lg"></i> Cancel
                            </button>
                        }
                    }
                </div>
            </div>
        </div>

        <!-- Change Password -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-warning">
                    <h5 class="mb-0"><i class="bi bi-key-fill"></i> Change Password</h5>
                </div>
                <div class="card-body">
                    <EditForm Model="changePasswordModel" OnValidSubmit="HandleChangePassword">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Current Password</label>
                            <input type="password" class="form-control" @bind="changePasswordModel.CurrentPassword" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">New Password</label>
                            <input type="password" class="form-control" @bind="changePasswordModel.NewPassword" required />
                            <small class="text-muted">At least 6 characters</small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Confirm New Password</label>
                            <input type="password" class="form-control" @bind="changePasswordModel.ConfirmPassword" required />
                        </div>

                        <button type="submit" class="btn btn-warning" disabled="@isChangingPassword">
                            @if (isChangingPassword)
                            {
                                <span class="spinner-border spinner-border-sm me-2"></span>
                            }
                            <i class="bi bi-shield-lock"></i> Change Password
                        </button>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics -->
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card text-center" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
                <div class="card-body">
                    <i class="bi bi-car-front-fill" style="font-size: 3rem;"></i>
                    <h3 class="mt-3">@vehicleCount</h3>
                    <p class="mb-0">Registered Vehicles</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card text-center" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); color: white;">
                <div class="card-body">
                    <i class="bi bi-calendar-check-fill" style="font-size: 3rem;"></i>
                    <h3 class="mt-3">@totalBookings</h3>
                    <p class="mb-0">Parking Sessions</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card text-center" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%); color: white;">
                <div class="card-body">
                    <i class="bi bi-clock-history" style="font-size: 3rem;"></i>
                    <h3 class="mt-3">@DateTime.Now.ToString("dd/MM/yyyy")</h3>
                    <p class="mb-0">Join Date</p>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private Customer? currentCustomer;
    private Customer? originalCustomer;
    private Guid currentCustomerId;
    private bool isEditingProfile = false;
    private bool isSaving = false;
    private bool isChangingPassword = false;
    private string successMessage = string.Empty;
    private string errorMessage = string.Empty;

    private int vehicleCount = 0;
    private int totalBookings = 0;

    private ChangePasswordModel changePasswordModel = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var userIdClaim = authState.User.FindFirst(ClaimTypes.NameIdentifier);

            if (userIdClaim != null && Guid.TryParse(userIdClaim.Value, out var userId))
            {
                currentCustomerId = userId;
                await LoadProfile();
                await LoadStats();
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
    }

    private async Task LoadProfile()
    {
        try
        {
            // Get info from AuthenticationState instead of calling API
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var userInfo = await SimpleAuthProvider.GetCurrentUser();
        
            if (userInfo != null)
            {
                currentCustomer = new Customer
                {
                    CustomerId = userInfo.UserId,
                    FullName = userInfo.FullName,
                    Phone = userInfo.Phone ?? "",
                    Email = userInfo.Email ?? "",
                    PasswordHash = "" // not needed for display
                };
            
                originalCustomer = new Customer
                {
                    CustomerId = currentCustomer.CustomerId,
                    FullName = currentCustomer.FullName,
                    Phone = currentCustomer.Phone,
                    Email = currentCustomer.Email,
                    PasswordHash = currentCustomer.PasswordHash
                };
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Could not load profile: {ex.Message}";
        }
    }

    private async Task LoadStats()
    {
        try
        {
            var vehicles = await CustomerService.GetMyVehicles(currentCustomerId);
            vehicleCount = vehicles.Count;
            totalBookings = vehicles.Sum(v => v.ParkingRegistrations.Count);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading stats: {ex.Message}");
        }
    }

    private void StartEditProfile()
    {
        isEditingProfile = true;
    }

    private void CancelEditProfile()
    {
        if (originalCustomer != null && currentCustomer != null)
        {
            currentCustomer.FullName = originalCustomer.FullName;
            currentCustomer.Phone = originalCustomer.Phone;
            currentCustomer.Email = originalCustomer.Email;
        }
        isEditingProfile = false;
    }

    private async Task SaveProfile()
    {
        try
        {
            isSaving = true;
            errorMessage = string.Empty;

            if (currentCustomer != null)
            {
                await CustomerService.UpdateCustomerAsync(currentCustomer);
                
                // Update auth state with new name
                var userInfo = new UserInfo
                {
                    UserId = currentCustomer.CustomerId,
                    FullName = currentCustomer.FullName,
                    UserType = "Customer",
                    Email = currentCustomer.Email,
                    Phone = currentCustomer.Phone
                };
                await SimpleAuthProvider.MarkUserAsAuthenticated(userInfo);

                originalCustomer = new Customer
                {
                    CustomerId = currentCustomer.CustomerId,
                    FullName = currentCustomer.FullName,
                    Phone = currentCustomer.Phone,
                    Email = currentCustomer.Email,
                    PasswordHash = currentCustomer.PasswordHash
                };

                successMessage = "Profile updated successfully!";
                isEditingProfile = false;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task HandleChangePassword()
    {
        try
        {
            isChangingPassword = true;
            errorMessage = string.Empty;

            if (changePasswordModel.NewPassword != changePasswordModel.ConfirmPassword)
            {
                errorMessage = "Password confirmation does not match!";
                return;
            }

            if (changePasswordModel.NewPassword.Length < 6)
            {
                errorMessage = "New password must be at least 6 characters!";
                return;
            }

            await CustomerService.ChangePassword(currentCustomerId, changePasswordModel);

            successMessage = "Password changed successfully!";
            changePasswordModel = new();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isChangingPassword = false;
        }
    }

}