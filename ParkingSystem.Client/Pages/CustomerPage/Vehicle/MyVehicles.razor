@page "/my-vehicles"
@attribute [Authorize(Roles = "Customer")]
@using ParkingSystem.Shared.Models
@using ParkingSystem.Client.Services
@using System.Security.Claims
@inject CustomerService CustomerService
@inject AuthenticationStateProvider AuthStateProvider
@inject IJSRuntime JSRuntime
@implements IAsyncDisposable

<PageTitle>Xe của tôi</PageTitle>

<div class="container-fluid mt-4">
    <div class="row mb-3">
        <div class="col">
            <h3><i class="bi bi-car-front-fill"></i> Quản lý xe của tôi</h3>
        </div>
        <div class="col-auto">
            <button class="btn btn-primary" @onclick="ShowAddVehicleModal">
                <i class="bi bi-plus-circle"></i> Thêm xe mới
            </button>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-triangle-fill"></i> @errorMessage
            <button type="button" class="btn-close" @onclick="() => errorMessage = string.Empty"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle-fill"></i> @successMessage
            <button type="button" class="btn-close" @onclick="() => successMessage = string.Empty"></button>
        </div>
    }

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Đang tải...</span>
            </div>
            <p class="mt-2">Đang tải danh sách xe...</p>
        </div>
    }
    else if (vehicles.Count == 0)
    {
        <div class="text-center py-5">
            <i class="bi bi-car-front" style="font-size: 4rem; color: #ccc;"></i>
            <h4 class="mt-3 text-muted">Chưa có xe nào</h4>
            <p class="text-muted">Thêm xe đầu tiên của bạn để bắt đầu đặt chỗ đỗ</p>
            <button class="btn btn-primary mt-2" @onclick="ShowAddVehicleModal">
                <i class="bi bi-plus-circle"></i> Thêm xe ngay
            </button>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var vehicle in vehicles)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    <h5 class="card-title mb-1">
                                        <i class="bi bi-card-text"></i> @vehicle.PlateNumber
                                    </h5>
                                    <span class="badge bg-info">@(vehicle.VehicleType ?? "Chưa xác định")</span>
                                </div>
                                <div class="btn-group btn-group-sm">
                                    <button class="btn btn-outline-primary" @onclick="() => EditVehicle(vehicle)" title="Sửa">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                    <button class="btn btn-outline-danger" @onclick="() => ConfirmDeleteVehicle(vehicle)" title="Xóa">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </div>
                            
                            <hr />
                            
                            <div class="small text-muted">
                                <i class="bi bi-clock-history"></i> 
                                Số lần đỗ: <strong>@vehicle.ParkingRegistrations.Count</strong>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@* Modal thêm/sửa xe *@
@if (showVehicleModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        @if (isEditMode)
                        {
                            <text><i class="bi bi-pencil-square"></i> Cập nhật xe</text>
                        }
                        else
                        {
                            <text><i class="bi bi-plus-circle"></i> Thêm xe mới</text>
                        }
                    </h5>
                    <button type="button" class="btn-close" @onclick="CloseModal"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="currentVehicle" OnValidSubmit="SaveVehicle">
                        <div class="mb-3">
                            <label class="form-label">Biển số xe <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" @bind="currentVehicle.PlateNumber" 
                                   placeholder="Ví dụ: 30A-12345" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Loại xe <span class="text-danger">*</span></label>
                            <select class="form-select" @bind="currentVehicle.VehicleType" required>
                                <option value="">-- Chọn loại xe --</option>
                                <option value="Xe máy">Xe máy</option>
                                <option value="Ô tô">Ô tô</option>
                                <option value="Xe đạp điện">Xe đạp điện</option>
                                <option value="Xe tải">Xe tải</option>
                            </select>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" @onclick="CloseModal">Hủy</button>
                            <button type="submit" class="btn btn-primary" disabled="@isSaving">
                                @if (isSaving)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                }
                                @(isEditMode ? "Cập nhật" : "Thêm mới")
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<Vehicle> vehicles = new();
    private Vehicle currentVehicle = new();
    private bool isLoading = true;
    private bool showVehicleModal = false;
    private bool isEditMode = false;
    private bool isSaving = false;
    private string errorMessage = string.Empty;
    private string successMessage = string.Empty;
    private Guid currentCustomerId;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Lấy CustomerId từ authentication state
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var userIdClaim = authState.User.FindFirst(ClaimTypes.NameIdentifier);
            
            if (userIdClaim != null && Guid.TryParse(userIdClaim.Value, out var customerId))
            {
                currentCustomerId = customerId;
                
                
                // Register event handlers
                CustomerService.OnVehicleAdded += HandleVehicleAdded;
                CustomerService.OnVehicleUpdated += HandleVehicleUpdated;
                CustomerService.OnVehicleDeleted += HandleVehicleDeleted;
                
                // Load vehicles
                await LoadVehicles();
            }
            else
            {
                errorMessage = "Không thể xác định thông tin người dùng";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Lỗi khởi tạo: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task LoadVehicles()
    {
        try
        {
            isLoading = true;
            vehicles = await CustomerService.GetMyVehicles(currentCustomerId);
        }
        catch (Exception ex)
        {
            errorMessage = $"Không thể tải danh sách xe: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ShowAddVehicleModal()
    {
        currentVehicle = new Vehicle { CustomerId = currentCustomerId };
        isEditMode = false;
        showVehicleModal = true;
    }

    private void EditVehicle(Vehicle vehicle)
    {
        currentVehicle = new Vehicle
        {
            VehicleId = vehicle.VehicleId,
            PlateNumber = vehicle.PlateNumber,
            VehicleType = vehicle.VehicleType,
            CustomerId = vehicle.CustomerId
        };
        isEditMode = true;
        showVehicleModal = true;
    }

    private void CloseModal()
    {
        showVehicleModal = false;
        currentVehicle = new();
        errorMessage = string.Empty;
    }

    private async Task SaveVehicle()
    {
        try
        {
            isSaving = true;
            errorMessage = string.Empty;

            if (isEditMode)
            {
                await CustomerService.UpdateVehicle(currentVehicle.VehicleId, currentVehicle.PlateNumber, currentVehicle.VehicleType ?? "");
                successMessage = "Cập nhật xe thành công!";
            }
            else
            {
                await CustomerService.AddVehicle(currentCustomerId, currentVehicle.PlateNumber, currentVehicle.VehicleType ?? "");
                successMessage = "Thêm xe mới thành công!";
            }

            CloseModal();
            await LoadVehicles();
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task ConfirmDeleteVehicle(Vehicle vehicle)
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm",
            $"Bạn có chắc muốn xóa xe '{vehicle.PlateNumber}'?\n\nThao tác này không thể hoàn tác!");

        if (confirmed)
        {
            try
            {
                await CustomerService.DeleteVehicle(vehicle.VehicleId);
                successMessage = $"Đã xóa xe '{vehicle.PlateNumber}'";
                await LoadVehicles();
            }
            catch (Exception ex)
            {
                errorMessage = ex.Message;
            }
        }
    }

    // Real-time event handlers
    private async Task HandleVehicleAdded(Vehicle vehicle)
    {
        if (vehicle.CustomerId == currentCustomerId)
        {
            vehicles.Insert(0, vehicle);
            await InvokeAsync(StateHasChanged);
        }
    }

    private async Task HandleVehicleUpdated(Vehicle vehicle)
    {
        var index = vehicles.FindIndex(v => v.VehicleId == vehicle.VehicleId);
        if (index >= 0)
        {
            vehicles[index] = vehicle;
            await InvokeAsync(StateHasChanged);
        }
    }

    private async Task HandleVehicleDeleted(Guid vehicleId)
    {
        var vehicle = vehicles.FirstOrDefault(v => v.VehicleId == vehicleId);
        if (vehicle != null)
        {
            vehicles.Remove(vehicle);
            await InvokeAsync(StateHasChanged);
        }
    }

    public async ValueTask DisposeAsync()
    {
        CustomerService.OnVehicleAdded -= HandleVehicleAdded;
        CustomerService.OnVehicleUpdated -= HandleVehicleUpdated;
        CustomerService.OnVehicleDeleted -= HandleVehicleDeleted;
    }
}