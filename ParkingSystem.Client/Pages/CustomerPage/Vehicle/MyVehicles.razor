@page "/my-vehicles"
@attribute [Authorize(Roles = "Customer")]
@using ParkingSystem.Shared.Models
@using ParkingSystem.Client.Services
@using System.Security.Claims
@using ParkingSystem.Shared.DTOs
@inject CustomerService CustomerService
@inject AuthenticationStateProvider AuthStateProvider
@inject IJSRuntime JSRuntime
@implements IAsyncDisposable

<PageTitle>My Vehicles</PageTitle>

<div class="container-fluid mt-4">
    <div class="row mb-3">
        <div class="col">
            <h3><i class="bi bi-car-front-fill"></i> Manage My Vehicles</h3>
        </div>
        <div class="col-auto">
            <button class="btn btn-primary" @onclick="ShowAddVehicleModal">
                <i class="bi bi-plus-circle"></i> Add New Vehicle
            </button>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-triangle-fill"></i> @errorMessage
            <button type="button" class="btn-close" @onclick="() => errorMessage = string.Empty"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle-fill"></i> @successMessage
            <button type="button" class="btn-close" @onclick="() => successMessage = string.Empty"></button>
        </div>
    }

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2">Loading vehicle list...</p>
        </div>
    }
    else if (vehicles.Count == 0)
    {
        <div class="text-center py-5">
            <i class="bi bi-car-front" style="font-size: 4rem; color: #ccc;"></i>
            <h4 class="mt-3 text-muted">No vehicles found</h4>
            <p class="text-muted">Add your first vehicle to start booking a parking slot</p>
            <button class="btn btn-primary mt-2" @onclick="ShowAddVehicleModal">
                <i class="bi bi-plus-circle"></i> Add Vehicle Now
            </button>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var vehicle in vehicles)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    <h5 class="card-title mb-1">
                                        <i class="bi bi-card-text"></i> @vehicle.PlateNumber
                                    </h5>
                                    <span class="badge bg-info">@(vehicle.VehicleType ?? "Unknown")</span>
                                </div>
                                <div class="btn-group btn-group-sm">
                                    <button class="btn btn-outline-primary" @onclick="() => EditVehicle(vehicle)" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                    <button class="btn btn-outline-danger" 
                                            @onclick="() => ConfirmDeleteVehicle(vehicle)"
                                            title="@(vehicle.ParkingRegistrations.Any(pr => pr.Status == "Active" && pr.CheckOutTime == null) ? "Cannot delete a vehicle that is parked" : "Delete")"
                                            disabled="@vehicle.HasActiveParking">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </div>
                            
                            <hr />
                            
                            <div class="small text-muted">
                                <i class="bi bi-clock-history"></i> 
                                Number of parkings: <strong>@vehicle.ParkingRegistrations.Count</strong>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@* Add/Edit Vehicle Modal *@
@if (showVehicleModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        @if (isEditMode)
                        {
                            <text><i class="bi bi-pencil-square"></i> Update Vehicle</text>
                        }
                        else
                        {
                            <text><i class="bi bi-plus-circle"></i> Add New Vehicle</text>
                        }
                    </h5>
                    <button type="button" class="btn-close" @onclick="CloseModal"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="currentVehicle" OnValidSubmit="SaveVehicle">
                        <DataAnnotationsValidator />
                        <ValidationSummary />
                        <div class="mb-3">
                            <label class="form-label">Plate Number <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" @bind="currentVehicle.PlateNumber"
                                   placeholder="e.g., 30A-12345" required/>
                            <ValidationMessage For="@(() => currentVehicle.PlateNumber)"/>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Vehicle Type <span class="text-danger">*</span></label>
                            <select class="form-select" @bind="currentVehicle.VehicleType" required>
                                <option value="">--  Select vehicle type --</option>
                                @foreach (var vehicleType in activeVehicleTypes)
                                {
                                    <option value="@vehicleType">@vehicleType</option>
                                }
                            </select>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" @onclick="CloseModal">Cancel</button>
                            <button type="submit" class="btn btn-primary" disabled="@isSaving">
                                @if (isSaving)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                }
                                @(isEditMode ? "Update" : "Add")
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<Vehicle> vehicles = new();
    private List<string> activeVehicleTypes = new();
    private Vehicle currentVehicle = new();
    private bool isLoading = true;
    private bool showVehicleModal = false;
    private bool isEditMode = false;
    private bool isSaving = false;
    private string errorMessage = string.Empty;
    private string successMessage = string.Empty;
    private Guid currentCustomerId;
    private bool hasActiveParking = false;
    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Get CustomerId from authentication state
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var userIdClaim = authState.User.FindFirst(ClaimTypes.NameIdentifier);

            if (userIdClaim != null && Guid.TryParse(userIdClaim.Value, out var customerId))
            {
                currentCustomerId = customerId;

                // Register event handlers
                CustomerService.OnVehicleAdded += HandleVehicleAdded;
                CustomerService.OnVehicleUpdated += HandleVehicleUpdated;
                CustomerService.OnVehicleTypesChanged += HandleVehicleTypesChanged;
                CustomerService.OnVehicleDeleted += HandleVehicleDeleted;

                // Load active vehicle types and then vehicles
                await LoadActiveVehicleTypes();
                await LoadVehicles();
            }
            else
            {
                errorMessage = "Unable to determine user information";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Initialization error: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task LoadActiveVehicleTypes()
    {
        try
        {
            activeVehicleTypes = await CustomerService.GetActiveVehicleTypes();
            if (!activeVehicleTypes.Any())
            {
                errorMessage = "Không tìm thấy loại xe nào đang hoạt động. Vui lòng liên hệ quản trị viên.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Lỗi khi tải danh sách loại xe: {ex.Message}";
        }
    }
    private async Task HandleVehicleTypesChanged(ParkingPriceDto parkingPriceDto)
    {
        try
        {
            // Reload the active vehicle types
            await LoadActiveVehicleTypes();
        
            // If the modal is open and we're editing a vehicle
            if (showVehicleModal && !string.IsNullOrEmpty(currentVehicle.VehicleType))
            {
                // If the current vehicle type was updated or deactivated
                if (currentVehicle.VehicleType == parkingPriceDto.VehicleType)
                {
                    if (!parkingPriceDto.IsActive)
                    {
                        // If the current vehicle type was deactivated, reset to default
                        currentVehicle.VehicleType = activeVehicleTypes.FirstOrDefault() ?? string.Empty;
                    
                        if (activeVehicleTypes.Any())
                        {
                            errorMessage = $"Loại xe '{parkingPriceDto.VehicleType}' đã bị vô hiệu hóa. Vui lòng chọn loại xe khác.";
                        }
                        else
                        {
                            errorMessage = "Không có loại xe nào khả dụng. Vui lòng liên hệ quản trị viên.";
                        }
                    }
                    else
                    {
                        // The vehicle type was updated but still active
                        currentVehicle.VehicleType = parkingPriceDto.VehicleType;
                    }
                }
            }
        
            // Update the UI
            await InvokeAsync(StateHasChanged);
        }
        catch (Exception ex)
        {
            errorMessage = $"Có lỗi xảy ra khi cập nhật danh sách loại xe: {ex.Message}";
        }
    }
    private async Task LoadVehicles()
    {
        try
        {
            isLoading = true;
            vehicles = await CustomerService.GetMyVehicles(currentCustomerId);
            StateHasChanged();
        }
        catch (Exception ex)
        {
            errorMessage = $"Unable to load vehicle list: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ShowAddVehicleModal()
    {
        currentVehicle = new Vehicle { CustomerId = currentCustomerId };
        isEditMode = false;
        showVehicleModal = true;
    }

    private void EditVehicle(Vehicle vehicle)
    {
        currentVehicle = new Vehicle
        {
            VehicleId = vehicle.VehicleId,
            PlateNumber = vehicle.PlateNumber,
            VehicleType = vehicle.VehicleType,
            CustomerId = vehicle.CustomerId
        };
        isEditMode = true;
        showVehicleModal = true;
    }

    private void CloseModal()
    {
        showVehicleModal = false;
        currentVehicle = new();
        errorMessage = string.Empty;
    }
    private string NormalizePlate(string? input)
    {
        if (string.IsNullOrWhiteSpace(input)) return string.Empty;
        var s = input!.Trim().ToUpperInvariant();
        // keep existing dash if present, remove spaces and dots
        s = s.Replace(" ", "").Replace(".", "");
        return s;
    }
    private async Task SaveVehicle()
    {
        try
        {
            isSaving = true;
            errorMessage = string.Empty;
            currentVehicle.PlateNumber = NormalizePlate(currentVehicle.PlateNumber);

            if (isEditMode)
            {
                await CustomerService.UpdateVehicle(currentVehicle.VehicleId, currentVehicle.PlateNumber, currentVehicle.VehicleType ?? "");
                successMessage = "Vehicle updated successfully!";
            }
            else
            {
                await CustomerService.AddVehicle(currentCustomerId, currentVehicle.PlateNumber, currentVehicle.VehicleType ?? "");
                successMessage = "New vehicle added successfully!";
            }

            CloseModal();
            await LoadVehicles();
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task ConfirmDeleteVehicle(Vehicle vehicle)
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm",
            $"Are you sure you want to delete the vehicle '{vehicle.PlateNumber}'?\n\nThis action cannot be undone!");

        if (confirmed)
        {
            try
            {
                await CustomerService.DeleteVehicle(vehicle.VehicleId);
                successMessage = $"Deleted vehicle '{vehicle.PlateNumber}'";
                await LoadVehicles();
            }
            catch (Exception ex)
            {
                errorMessage = ex.Message;
            }
        }
    }

    // Real-time event handlers
    private async Task HandleVehicleAdded(Vehicle vehicle)
    {
        if (vehicle.CustomerId == currentCustomerId)
        {
            vehicles.Insert(0, vehicle);
            await InvokeAsync(StateHasChanged);
        }
    }

    private async Task HandleVehicleUpdated(Vehicle vehicle)
    {
        var index = vehicles.FindIndex(v => v.VehicleId == vehicle.VehicleId);
        if (index >= 0)
        {
            vehicles[index] = vehicle;
            await InvokeAsync(StateHasChanged);
        }
    }

    private async Task HandleVehicleDeleted(Guid vehicleId)
    {
        var vehicle = vehicles.FirstOrDefault(v => v.VehicleId == vehicleId);
        if (vehicle != null)
        {
            vehicles.Remove(vehicle);
            await InvokeAsync(StateHasChanged);
        }
    }

    public async ValueTask DisposeAsync()
    {
        CustomerService.OnVehicleAdded -= HandleVehicleAdded;
        CustomerService.OnVehicleUpdated -= HandleVehicleUpdated;
        CustomerService.OnVehicleDeleted -= HandleVehicleDeleted;
        CustomerService.OnVehicleTypesChanged -= HandleVehicleTypesChanged; 
    }
}