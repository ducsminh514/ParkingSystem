@page "/reports"
@using ParkingSystem.Client.Services
@using ParkingSystem.Shared.Models
@inject IReportService ReportService
@inject NavigationManager Navigation
@implements IDisposable
@inject UserService UserService
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>My Reports</h2>
        <button class="btn btn-primary" @onclick="NavigateToCreateReport">
            <span class="oi oi-plus"></span> Create New Report
        </button>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary"></div>
        </div>
    }
    else if (reports == null || reports.Count == 0)
    {
        <div class="alert alert-info">
            <p>You haven't created any reports yet.</p>
        </div>
    }
    else
    {
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">@reports.Count</h5>
                        <p class="card-text text-muted">Total</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title text-warning">@reports.Count(r => r.Status == "Pending")</h5>
                        <p class="card-text text-muted">Pending</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title text-primary">@reports.Count(r => r.Status == "InProgress")</h5>
                        <p class="card-text text-muted">In Progress</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title text-success">@reports.Count(r => r.Status == "Resolved")</h5>
                        <p class="card-text text-muted">Resolved</p>
                    </div>
                </div>
            </div>
        </div>

        <ul class="nav nav-tabs mb-3">
            <li class="nav-item">
                <button class="nav-link @(selectedStatus == "All" ? "active" : "")"
                        @onclick='() => FilterByStatus("All")'>
                    All
                </button>
            </li>
            <li class="nav-item">
                <button class="nav-link @(selectedStatus == "Pending" ? "active" : "")"
                        @onclick='() => FilterByStatus("Pending")'>
                    Pending
                </button>
            </li>
            <li class="nav-item">
                <button class="nav-link @(selectedStatus == "InProgress" ? "active" : "")"
                        @onclick='() => FilterByStatus("InProgress")'>
                    In Progress
                </button>
            </li>
            <li class="nav-item">
                <button class="nav-link @(selectedStatus == "Resolved" ? "active" : "")"
                        @onclick='() => FilterByStatus("Resolved")'>
                    Resolved
                </button>
            </li>
        </ul>

        <div class="row">
            @foreach (var report in filteredReports)
            {
                <div class="col-md-12 mb-3">
                    <div class="card" style="cursor: pointer;" @onclick="() => ViewReportDetail(report.ReportId)">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div style="flex-grow: 1;">
                                    <h5 class="card-title">
                                        @report.Title
                                        <span class="badge badge-@GetStatusColor(report.Status)">@report.Status</span>
                                        <span class="badge badge-@GetPriorityColor(report.Priority)">@report.Priority</span>
                                    </h5>
                                    <p class="text-muted small mb-2">
                                        Category: @report.Category?.CategoryName
                                    </p>
                                    <p class="card-text">@GetTruncated(report.Content)</p>
                                </div>
                                <div class="text-end ms-3">
                                    <small class="text-muted d-block">
                                        @report.CreatedDate.ToString("dd/MM/yyyy HH:mm")
                                    </small>
                                    @if (report.ReportComments.Count > 0)
                                    {
                                        <span class="badge badge-secondary mt-2">
                                            @report.ReportComments.Count Comments
                                        </span>
                                    }
                                </div>
                            </div>

                            @if (report.Status == "Resolved" && report.Rating == null)
                            {
                                <div class="mt-3">
                                    <button class="btn btn-sm btn-warning"
                                            @onclick:stopPropagation="true"
                                            @onclick="() => ShowRatingModal(report.ReportId)">
                                        Rate Resolution
                                    </button>
                                </div>
                            }

                            @if (report.Rating.HasValue)
                            {
                                <div class="mt-2">
                                    <small class="text-muted">Your rating: </small>
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <span style="color: @(i <= report.Rating ? "#ffc107" : "#ccc");">★</span>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@if (showRatingModal)
{
    <div class="modal" style="display: block; background: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Rate Resolution</h5>
                    <button type="button" class="close" @onclick="CloseRatingModal">
                        <span>&times;</span>
                    </button>
                </div>
                <div class="modal-body text-center">
                    <p>How satisfied are you?</p>
                    <div style="font-size: 2rem;">
                        @for (int i = 1; i <= 5; i++)
                        {
                            var star = i;
                            <span style="cursor: pointer; color: @(i <= selectedRating ? "#ffc107" : "#ccc");"
                                  @onclick="() => selectedRating = star">★</span>
                        }
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CloseRatingModal">Cancel</button>
                    <button class="btn btn-primary" @onclick="SubmitRating" disabled="@(selectedRating == 0)">
                        Submit
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<CustomerReport> reports = new();
    private List<CustomerReport> filteredReports = new();
    private bool isLoading = true;
    private string selectedStatus = "All";

    private bool showRatingModal = false;
    private Guid ratingReportId;
    private int selectedRating = 0;

    private Guid currentCustomerId ;

    protected override async Task OnInitializedAsync()
    {
        // Subscribe to real-time events
        ReportService.OnReportStatusUpdated += HandleReportStatusUpdated;
		currentCustomerId = await UserService.GetCurrentUserId();
        await LoadReports();
    }

    private void HandleReportStatusUpdated(Guid reportId, string status)
    {
        var report = reports.FirstOrDefault(r => r.ReportId == reportId);
        if (report != null)
        {
            report.Status = status;
            report.UpdatedDate = DateTime.Now;

            // Re-filter if needed
            FilterByStatus(selectedStatus);

            // Update UI
            InvokeAsync(StateHasChanged);
        }
    }

    private async Task LoadReports()
    {
        isLoading = true;
        try
        {
            reports = await ReportService.GetMyReportsAsync(currentCustomerId);
            filteredReports = reports;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void FilterByStatus(string status)
    {
        selectedStatus = status;
        filteredReports = status == "All"
            ? reports
            : reports.Where(r => r.Status == status).ToList();
    }

    private void NavigateToCreateReport()
    {
        Navigation.NavigateTo("/reports/create");
    }

    private void ViewReportDetail(Guid reportId)
    {
        Navigation.NavigateTo($"/reports/{reportId}");
    }

    private void ShowRatingModal(Guid reportId)
    {
        ratingReportId = reportId;
        selectedRating = 0;
        showRatingModal = true;
    }

    private void CloseRatingModal()
    {
        showRatingModal = false;
    }

    private async Task SubmitRating()
    {
        try
        {
            await ReportService.RateReportAsync(ratingReportId, selectedRating);
            await LoadReports();
            CloseRatingModal();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
        }
    }

    private string GetStatusColor(string status) => status switch
    {
        "Pending" => "warning",
        "InProgress" => "primary",
        "Resolved" => "success",
        "Rejected" => "danger",
        _ => "secondary"
    };

    private string GetPriorityColor(string priority) => priority switch
    {
        "Urgent" => "danger",
        "High" => "warning",
        "Normal" => "info",
        _ => "secondary"
    };

    private string GetTruncated(string content)
    {
        if (string.IsNullOrEmpty(content) || content.Length <= 150)
            return content;
        return content.Substring(0, 150) + "...";
    }

    public void Dispose()
    {
        // Unsubscribe from events to prevent memory leaks
        ReportService.OnReportStatusUpdated -= HandleReportStatusUpdated;
    }
}