@page "/reports/{ReportId:guid}"
@using ParkingSystem.Client.Services
@using ParkingSystem.Shared.Models
@inject IReportService ReportService
@inject NavigationManager Navigation
@inject UserService UserService
@implements IDisposable

<div class="container mt-4">
    <div class="mb-3">
        <button class="btn btn-secondary" @onclick="GoBack">
            <span class="oi oi-arrow-left"></span> Back to Reports
        </button>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary"></div>
        </div>
    }
    else if (report == null)
    {
        <div class="alert alert-danger">Report not found</div>
    }
    else
    {
        <div class="row">
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-header">
                        <h4 class="mb-2">@report.Title</h4>
                        <span class="badge badge-@GetStatusColor(report.Status) me-2">
                            @report.Status
                        </span>
                        <span class="badge badge-@GetPriorityColor(report.Priority)">
                            @report.Priority Priority
                        </span>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <small class="text-muted d-block">
                                Category: <strong>@report.Category?.CategoryName</strong>
                            </small>
                            <small class="text-muted d-block">
                                Created: @report.CreatedDate.ToString("dd/MM/yyyy HH:mm")
                            </small>
                            @if (report.UpdatedDate.HasValue)
                            {
                                <small class="text-muted d-block">
                                    Last Updated: @report.UpdatedDate.Value.ToString("dd/MM/yyyy HH:mm")
                                </small>
                            }
                        </div>

                        <hr />

                        <div class="report-content">
                            <h6>Description:</h6>
                            <p style="white-space: pre-wrap;">@report.Content</p>
                        </div>

                        @if (!string.IsNullOrEmpty(report.ResolutionNote))
                        {
                            <div class="alert alert-success mt-3">
                                <h6>Resolution Note:</h6>
                                <p class="mb-0">@report.ResolutionNote</p>
                            </div>
                        }

                        @if (report.Status == "Resolved" && !report.Rating.HasValue && !showRating)
                        {
                            <div class="mt-3">
                                <button class="btn btn-warning" @onclick="ShowRatingSection">
                                    <span class="oi oi-star"></span> Rate this resolution
                                </button>
                            </div>
                        }

                        @if (showRating)
                        {
                            <div class="card mt-3">
                                <div class="card-body">
                                    <h6>Rate the resolution:</h6>
                                    <div style="font-size: 2rem;">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            var starValue = i;
                                            <span style="cursor: pointer; color: @(i <= selectedRating ? "#ffc107" : "#ccc");"
                                                  @onclick="() => selectedRating = starValue">
                                                ★
                                            </span>
                                        }
                                    </div>
                                    <button class="btn btn-primary mt-2" @onclick="SubmitRating" disabled="@(selectedRating == 0 || isSubmittingRating)">
                                        @if (isSubmittingRating)
                                        {
                                            <span class="spinner-border spinner-border-sm me-2"></span>
                                        }
                                        Submit Rating
                                    </button>
                                    <button class="btn btn-secondary mt-2 ms-2" @onclick="() => showRating = false">
                                        Cancel
                                    </button>
                                </div>
                            </div>
                        }

                        @if (report.Rating.HasValue)
                        {
                            <div class="mt-3">
                                <strong>Your rating: </strong>
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <span style="color: @(i <= report.Rating ? "#ffc107" : "#ccc");">★</span>
                                }
                            </div>
                        }
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h5><span class="oi oi-comment-square"></span> Comments (@report.ReportComments.Count)</h5>
                    </div>
                    <div class="card-body">
                        @if (report.ReportComments.Any())
                        {
                            <div class="comments-list">
                                @foreach (var comment in report.ReportComments.Where(c => !c.IsInternal ).OrderBy(c => c.CreatedDate))
                                {
                                    <div class="mb-3 p-3 border rounded @(comment.UserType == "Staff" ? "bg-light" : "")">
                                        <div class="d-flex justify-content-between mb-2">
                                            <div>
                                                <strong>@GetCommentUserName(comment)</strong>
                                                @if (comment.UserType == "Staff")
                                                {
                                                    <span class="badge badge-primary ms-2">Staff</span>
                                                }
                                            </div>
                                            <small class="text-muted">
                                                @comment.CreatedDate.ToString("dd/MM/yyyy HH:mm")
                                            </small>
                                        </div>
                                        <p class="mb-0" style="white-space: pre-wrap;">@comment.Comment</p>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-muted text-center py-3">No comments yet</p>
                        }

                        @if (report.Status != "Resolved" && report.Status != "Rejected")
                        {
                            <hr />
                            <div class="add-comment-section">
                                <h6>Add a comment:</h6>
                                <div class="form-group mb-2">
                                    <textarea class="form-control" rows="3"
                                              @bind="newComment"
                                              placeholder="Type your comment here..."
                                              disabled="@isSubmittingComment"></textarea>
                                </div>
                                <button class="btn btn-primary" @onclick="HandleAddComment" disabled="@(string.IsNullOrWhiteSpace(newComment) || isSubmittingComment)">
                                    @if (isSubmittingComment)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2"></span>
                                    }
                                    <span class="oi oi-comment-square"></span> Post Comment
                                </button>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card mb-3">
                    <div class="card-header">
                        <h6><span class="oi oi-info"></span> Report Information</h6>
                    </div>
                    <div class="card-body">
                        <div class="mb-2">
                            <small class="text-muted">Report ID:</small>
                            <br />
                            <code style="font-size: 0.75rem; word-break: break-all;">@report.ReportId</code>
                        </div>
                        <hr />
                        <div class="mb-2">
                            <small class="text-muted">Status:</small>
                            <br />
                            <span class="badge badge-@GetStatusColor(report.Status)">
                                @report.Status
                            </span>
                        </div>
                        <hr />
                        <div class="mb-2">
                            <small class="text-muted">Priority:</small>
                            <br />
                            <span class="badge badge-@GetPriorityColor(report.Priority)">
                                @report.Priority
                            </span>
                        </div>
                        <hr />
                        <div class="mb-2">
                            <small class="text-muted">Customer:</small>
                            <br />
                            <strong>@report.Customer?.FullName</strong>
                        </div>
                        @if (report.AssignedStaff != null)
                        {
                            <hr />
                            <div class="mb-2">
                                <small class="text-muted">Assigned to:</small>
                                <br />
                                <strong>@report.AssignedStaff.FullName</strong>
                            </div>
                        }
                        @if (report.ResolvedDate.HasValue)
                        {
                            <hr />
                            <div class="mb-2">
                                <small class="text-muted">Resolved on:</small>
                                <br />
                                @report.ResolvedDate.Value.ToString("dd/MM/yyyy HH:mm")
                            </div>
                        }
                    </div>
                </div>

                @if (report.ReportAttachments.Any())
                {
                    <div class="card">
                        <div class="card-header">
                            <h6><span class="oi oi-paperclip"></span> Attachments</h6>
                        </div>
                        <div class="card-body">
                            @foreach (var attachment in report.ReportAttachments)
                            {
                                <div class="mb-2">
                                    <a href="@attachment.FileUrl" target="_blank">
                                        @attachment.FileName
                                    </a>
                                    <small class="text-muted d-block">
                                        @FormatFileSize(attachment.FileSize)
                                    </small>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public Guid ReportId { get; set; }

    private CustomerReport? report;
    private bool isLoading = true;
    private bool isSubmittingComment = false;
    private bool isSubmittingRating = false;
    private bool showRating = false;
    private int selectedRating = 0;
    private string newComment = string.Empty;

    private Guid currentCustomerId ;

    protected override async Task OnInitializedAsync()
    {
        // Subscribe to real-time events
        ReportService.OnReportStatusUpdated += HandleReportStatusUpdated;
        ReportService.OnNewCommentAdded += HandleNewCommentAdded;
        currentCustomerId = await UserService.GetCurrentUserId();
        await LoadReportDetail();
    }

    private async Task LoadReportDetail()
    {
        isLoading = true;
        try
        {
            report = await ReportService.GetReportDetailAsync(ReportId);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void HandleReportStatusUpdated(Guid reportId, string status)
    {
        if (report != null && report.ReportId == reportId)
        {
            report.Status = status;
            report.UpdatedDate = DateTime.Now;

            if (status == "Resolved" || status == "Rejected")
            {
                report.ResolvedDate = DateTime.Now;
            }

            InvokeAsync(StateHasChanged);
        }
    }

    private void HandleNewCommentAdded(ReportComment comment)
    {
        if (report != null && comment.ReportId == ReportId)
        {
            report.ReportComments.Add(comment);
            report.UpdatedDate = DateTime.Now;
            InvokeAsync(StateHasChanged);
        }
    }

    private async Task HandleAddComment()
    {
        if (string.IsNullOrWhiteSpace(newComment))
            return;

        isSubmittingComment = true;
        try
        {
            var comment = new ReportComment
                {
                    ReportId = ReportId,
                    UserId = currentCustomerId,
                    UserType = "Customer",
                    Comment = newComment,
                    IsInternal = false
                };

            var addedComment = await ReportService.AddCommentAsync(comment);

            // Comment will be added via real-time event, but add locally as fallback
            if (!report.ReportComments.Any(c => c.CommentId == addedComment.CommentId))
            {
                report.ReportComments.Add(addedComment);
            }

            newComment = string.Empty;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
        }
        finally
        {
            isSubmittingComment = false;
        }
    }

    private void ShowRatingSection()
    {
        showRating = true;
        selectedRating = 0;
    }

    private async Task SubmitRating()
    {
        isSubmittingRating = true;
        try
        {
            var success = await ReportService.RateReportAsync(ReportId, selectedRating);
            if (success)
            {
                report.Rating = selectedRating;
                showRating = false;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
        }
        finally
        {
            isSubmittingRating = false;
        }
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/reports");
    }

    private string GetCommentUserName(ReportComment comment)
    {
        // Try to get name from loaded entities
        if (comment.UserType == "Customer")
        {
            return report?.Customer?.FullName ?? "Customer";
        }
        else if(comment.UserType == "Staff")
        {
            return report?.AssignedStaff?.FullName ?? "Staff";
        }
        else
        {
            return "Admin";
        }
    }

    private string GetStatusColor(string status) => status switch
    {
        "Pending" => "warning",
        "InProgress" => "primary",
        "Resolved" => "success",
        "Rejected" => "danger",
        _ => "secondary"
    };

    private string GetPriorityColor(string priority) => priority switch
    {
        "Urgent" => "danger",
        "High" => "warning",
        "Normal" => "info",
        _ => "secondary"
    };

    private string FormatFileSize(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB" };
        double len = bytes;
        int order = 0;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len = len / 1024;
        }
        return $"{len:0.##} {sizes[order]}";
    }

    public void Dispose()
    {
        ReportService.OnReportStatusUpdated -= HandleReportStatusUpdated;
        ReportService.OnNewCommentAdded -= HandleNewCommentAdded;
    }
}