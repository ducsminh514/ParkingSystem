    // ============ REGISTRATION WORKFLOW ============

    private async Task CheckPhone()
    {
        try
        {
            registrationError = string.Empty;

            if (string.IsNullOrWhiteSpace(phoneNumber))
            {
                registrationError = "Vui lòng nhập số điện thoại";
                return;
            }

            if (phoneNumber.Length < 10 || phoneNumber.Length > 11)
            {
                registrationError = "Số điện thoại phải có 10-11 số";
                return;
            }

            isCheckingPhone = true;
            StateHasChanged();

            customerCheckResult = await SlotService.CheckCustomerByPhone(phoneNumber);
            
            // Chuyển sang bước 2
            registrationStep = 2;
        }
        catch (Exception ex)
        {
            registrationError = $"Lỗi khi kiểm tra: {ex.Message}";
        }
        finally
        {
            isCheckingPhone = false;
        }
    }

    private void SelectExistingVehicle(Guid vehicleId)
    {
        selectedVehicleId = vehicleId;
        showAddVehicleForm = false;
        newVehiclePlateNumber = string.Empty;
        newVehicleType = string.Empty;
        registrationError = string.Empty;
    }

    private void PreviousStep()
    {
        if (registrationStep > 1)
        {
            registrationStep--;
            registrationError = string.Empty;
        }
    }

    private void NextStep()
    {
        registrationError = string.Empty;

        if (registrationStep == 2)
        {
            // Validate step 2
            if (customerCheckResult?.Exists == true)
            {
                // Customer tồn tại - phải chọn xe hoặc nhập xe mới
                if (selectedVehicleId == null && string.IsNullOrWhiteSpace(newVehiclePlateNumber))
                {
                    registrationError = "Vui lòng chọn xe hoặc thêm xe mới";
                    return;
                }

                if (selectedVehicleId == null)
                {
                    // Đang thêm xe mới
                    if (string.IsNullOrWhiteSpace(newVehiclePlateNumber))
                    {
                        registrationError = "Vui lòng nhập biển số xe";
                        return;
                    }
                    if (string.IsNullOrWhiteSpace(newVehicleType))
                    {
                        registrationError = "Vui lòng chọn loại xe";
                        return;
                    }
                }
            }
            else
            {
                // Customer mới - validate tất cả
